{
  "name": "rheostat",
  "version": "1.0.0",
  "description": "Rheostat is a www, mobile, and accessible slider component built with React",
  "main": "lib/Slider.js",
  "jsnext:main": "src/Slider.jsx",
  "scripts": {
    "build": "babel src -d lib",
    "playground": "node devServer.js",
    "lint": "eslint src/Slider.jsx src/utils/*.js",
    "test": "npm run build && npm run lint && npm run test:coverage",
    "test:coverage": "babel-node node_modules/.bin/istanbul cover node_modules/.bin/_mocha -- -R tap 'test/**/*-test.js'"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:airbnb/rheostat.git"
  },
  "author": "Josh Perez <josh.perez@airbnb.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "alt": "^0.17.9",
    "babel": "^5.8.34",
    "babel-core": "^5.8.34",
    "babel-loader": "^5.4.0",
    "babel-preset-airbnb": "^1.0.1",
    "casual": "^1.5.3",
    "chai": "^3.4.1",
    "cosmos-js": "^0.7.0",
    "eslint": "^1.8.0",
    "eslint-config-airbnb": "^1.0.0",
    "eslint-plugin-react": "^3.7.1",
    "express": "^4.13.3",
    "istanbul": "^0.4.0",
    "mocha": "^2.3.3",
    "reagent": "^0.1.0",
    "sinon": "^1.17.2",
    "webpack": "^1.12.8",
    "webpack-dev-middleware": "^1.2.0",
    "webpack-hot-middleware": "^2.5.0"
  },
  "peerDependencies": {
    "react": ">=0.12.x"
  }
}
